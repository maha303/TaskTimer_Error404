<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:id="@+id/cvTaskItem"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

<!--            <CheckBox-->
<!--                android:id="@+id/cbTaskItem"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_margin="8dp"-->
<!--                />-->
            <CheckBox
                android:id="@+id/cbTaskItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleX="1.30"
                android:scaleY="1.30"
                style="@style/CustomCheckbox02"
                android:layout_margin="8dp"

                />

            <TextView
                android:id="@+id/tvTaskItemTitle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"

                android:text="task"
                android:textColor="#373737"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvTaskTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="0"
                android:text="Total time: "
                android:textColor="#DA997F"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="00:00:00"
                android:textColor="#373737"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivTaskItem"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_timer_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>